<h1> Article page </h1>
<div class="container-fluid">
  <div class="row">
       {{#each data}}
       <div class="col-sm-3">
            <a href="{{this.link}}" data-title="{{this.id}}" class='title'>{{this.title}}</a>
            <img src={{this.image}} width="250" height="250">
            <p> {{this.caption}}</p>
            <button type="button" class="btn btn-info btn-lg" data-id="{{this.id}}" data-toggle="modal" data-target="#myModal" id="save">save</button>
            </div>
        {{/each}}
    </div>

 <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm" >
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"></h4><div id="status"></div>
        </div>
        <div class="modal-body">
            <div class="fields">
                <div id="scrapetotal"></div>
            </div>
        </div>

        <div class="modal-footer">
        
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


</div>


