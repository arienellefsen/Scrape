<div class="container-fluid">
    <h1 class="page-title" > Summer Recipes</h1>
        
            <nav>
                 <button id="scrape" class="center-block"> Scrape Article </button>
                    <a href='/' class="menu-link">Home</a>
			        <a href='/saved' class="menu-link">Saved Recipes</a>
                </nav>

  <div class="row is-flex">
       {{#each data}}
       <div class="col-sm-3 col-md-3 col-lg-3">
           <div class="card">
                <a href="{{this.link}}" data-title="{{this.id}}" class='title'>{{this.title}}</a>
                <img src={{this.image}} width="250" height="250" class="thumb-img">
                <p> {{this.caption}}</p>
                <button type="button" class="btn" data-id="{{this.id}}" data-toggle="modal" data-target="#myModal"  data-id="{{this.id}}"id="save">Save Recipe</button>
                </div>
             </div>
        {{/each}}
    </div>

 <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm" >
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"></h4><div id="status"></div>
        </div>
        <div class="modal-body">
            <div class="fields">
                <div id="scrapetotal"></div>
        
            </div>
        </div>

        <div class="modal-footer">
        
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="javascript:window.location.reload()">Close</button>
        </div>
      </div>
    </div>
  </div>


</div>


