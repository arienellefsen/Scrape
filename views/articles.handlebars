<h1> Article page </h1>
<div class="container-fluid">
  <div class="row">
       {{#each data}}
       <div class="col-sm-3">
            <a href="{{this.link}}" data-title="{{this.id}}" class='title'>{{this.title}}</a>
            <img src={{this.image}} width="250" height="250">
            <p> {{this.caption}}</p>
            <button type="button" class="btn btn-info btn-lg" data-id="{{this.id}}" data-toggle="modal" data-target="#myModal" id="note">Note</button>
            <button> Delete Note</button>
            </div>
        {{/each}}
    </div>


 <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg" >
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Comment</h4><div id="status"></div>
        </div>
        <div class="modal-body">

            <div class="fields">
                Title: <input id='titleinput' name='title'><br><br>
                Comment: <textarea name="comment" id="bodyinput">Add comment here</textarea>
                                id: <input id='idfield' name='id'><br><br>

            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" id="save">Save</button>
            <button type="button" class="btn btn-default" id="delete">Delete</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


</div>


